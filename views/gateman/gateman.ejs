<%- include('../partials/header') -%>

<!-- passing the data from the ejs to input to vue app  -->
<input id="ejsdata" type="text" class="d-none" value="[]">


<div id="app" class="d-none">

  <nav-bar>
    <%= title?title:"Deafult Title" %>
    <div class="badge font-monospace fw-lighter" style="font-size: 12px;font-weight: 200;">(<%= user?user:"" %>)</div>
  </nav-bar>


  <div v-if="!inform && !outform ">
    <div class="container my-3" v-if="'<%= user %>'==='nk' " style="display: flex;
    justify-content: center;
    align-items: center;
    ">
      <div class="card w-100">
        <div class="card-header small">Total</div>
        <div class="card-body small">
          no of trucks in
          <ul>
            <li>17</li>
          </ul>
          <a href="/gateman/allin">
            <button>show more</button>
          </a>
        </div>

      </div>
    </div>
    <hr>
    <div class="container" style="display: flex;
    justify-content: center;
    align-items: center;
    height: 200px;
    ">
      <div class="card w-50">
        <div class="card-header small">Last In</div>
        <div class="card-body small">
          detalis of in trucksw
          <ul>
            <li>tn-64-1234</li>
          </ul>
        </div>
      </div>
      <button class="m-2 p-4 rounded w-50" @click="inform =!inform">in</button>
    </div>
    <hr>
    <div class="container" style="display: flex;
    justify-content: center;
    align-items: center;
    height: 200px;
    ">
      <div class="card w-50">
        <div class="card-header small">Last Out</div>
        <div class="card-body small">
          detalis of in trucksw
          <ul>
            <li>tn-64-1234</li>
          </ul>
        </div>
      </div>
      <button class="m-2 p-4 rounded w-50" @click="outform=!outform">out</button>
    </div>
  </div>


  <div class="" style="height: 90vh;" v-if="inform">
    <div class="container my-3">
      <h1 class="d-inline">IN</h1>
      <div class="btn btn-outline-primary float-end " @click="inform = !inform">
        <span>cancel</span>
      </div>
    </div>
    <hr>
    <form action="/gateman" method="post" autocomplete="off" class="m-0 p-0 container card small">
      <div class="bg-light p-4 ">
        <p>
          <!-- <h4>IN Form</h4> -->
          Truck no* :<br><input name="truckno" required> <br>
          <!-- logTime :<input name="logTime" id=""> <br> -->
          <!-- sampleDate* :<br><input type="date" name="sampleDate" required><br> -->
          Bags* :<br><input name="bags" inputmode="numeric" required> <br>
          <!-- branReport :<br><input name="branReport" inputmode="numeric"><br> -->
          <!-- plantBranReport :<br><input name="plantBranReport" inputmode="numeric"> <br> -->
          Party :<br><input name="party"> <br>
          Broker :<br><input name="broker"> <br>
          Naration :<br><input name="naration"> <br>
          User :<input name="user" value="<%= user %>" class="disabled btn"> <br>
          <input type="submit" value="submit" class="btn btn-primary m-4">
        </p>
      </div>
    </form>
  </div>






  <div class="" style="height: 90vh;" v-if="outform ">
    <div class="container my-3">
      <h1 class="d-inline">OUT</h1>
      <div class="btn btn-outline-primary float-end " @click="outform = !outform">
        <span>cancel</span>
      </div>
    </div>

    <hr>
    <form action="/gateman" method="post" autocomplete="off" class="m-0 p-0 container card small">
      <div class="bg-light p-4 ">
        <p>

          <!-- <h4>IN Form</h4> -->
          Truck no* :<br><input name="truckno" required> <br>
          <!-- logTime :<input name="logTime" id=""> <br> -->
          <!-- sampleDate* :<br><input type="date" name="sampleDate" required><br> -->
          Bags* :<br><input name="bags" inputmode="numeric" required> <br>
          <!-- branReport :<br><input name="branReport" inputmode="numeric"><br> -->
          <!-- plantBranReport :<br><input name="plantBranReport" inputmode="numeric"> <br> -->
          gatepass no* : <br> <input name="bags" inputmode="numeric" required> <br>
          <div class="card d-inline-block ps-2">
            Party :<input name="party" class="disabled btn"><br>
            Broker :<input name="broker" class="disabled btn"><br>
            Naration :<input name="naration" class="disabled btn"><br>
          </div>
          OutNaration :<br><input name="outNaration"> <br>
          User :<input name="user" value="<%= user %>" class="disabled btn"> <br>
          <input type="submit" value="check" class="btn btn-primary m-4">
        </p>
      </div>
    </form>

  </div>

</div>



<%- include('../partials/footer') -%>